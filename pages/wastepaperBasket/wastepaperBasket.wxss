page {
  background-color: #f0efe9;
  width: 100%;
  margin:0;
}
.box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* border: 1px solid pink; */
  align-items: center;
  margin:0;
  margin-top: 20rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  background-color: white;
}
.boxLeft .boxLeftTitle{
  font-size: 40rpx;
  font-weight: bolder;
  margin-bottom: 5rpx;
}

.boxLeft .boxLeftTime{
  font-size: 25rpx;
  color: #999;
}

.boxRight{
  display: flex;
  flex-direction: row;
}

.boxRight .boxRightBtn{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-radius: 30rpx;
  margin: 10rpx;
  width: 130rpx;
  font-size: 30rpx;
  background-color: #50e3a4;
  color: white;
  font-weight: bolder;
  font-size: 35rpx;
}