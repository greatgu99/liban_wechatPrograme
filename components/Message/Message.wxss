.messageBox{
  /* border: 1px solid green; */
  margin: 16rpx 35rpx 40rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  height: 300rpx;
  box-shadow: 5px 5rpx 16rpx 0rpx #666;
  padding: 30rpx 0;
  display: flex;
  position: relative;
  box-sizing: border-box;
  background-color: #f0efe9;
}
.notice{
  width: 40rpx;
  height: 40rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: -14rpx;
  left: -14rpx;
}
.leftBox{
  width: 150rpx;
  /* border: 1px solid blue; */
  border-right:4rpx solid #ccc;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  padding: 0 20rpx;
}

.leftBoxImg{
  width: 90rpx;
  height: 90rpx;
  border:1px solid green;
  border-radius: 15rpx;
}
.leftBoxName{
  font-size: 20rpx;
  margin-top: 12rpx;
  margin-bottom: 50rpx;
}
.leftBoxTime{
  /* border: 1px solid blue; */
  font-size: 20rpx;
}

.rightBox{
  /* width: 100%; */
  width: 460rpx;
  /* border: 1px solid red; */
  height: 100%;
  padding-left: 36rpx;
  box-sizing: border-box;
  position: relative;
}

.rightBoxStar{
  height:45rpx;
  width: 45rpx;
  position: absolute;
  left:400rpx;
  /* border: 5rpx solid yellow; */
}
.rightBoxTitle{
  font-weight: bolder;
  font-size: 40rpx;
}
.rightBoxContent{
  font-weight: 20rpx;
  margin: 10rpx 0;
}
.rightBoxImg{
  border:1rpx solid green;
  border-radius: 15rpx;
  height: 90rpx;
  width: 90rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.rightBoxRead{
  color: #50e3a4;
  font-size: 30rpx;
  font-weight: bolder;
  position: absolute;
  top: 200rpx;
  left: 400rpx;
}